{
  "manifest_version": 3,
  "name": "Gemini Page Chat",
  "version": "1.2",
  "description": "閲覧中のページについてGeminiとチャットします",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "sidePanel",
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "チャットを開く"
  }
}